extends layout

block content
  div(class="mx-auto w-1/3 mt-20 p-4 bg-white shadow-lg rounded-lg")
    h2(class="text-2xl text-center font-semibold mb-4") Registration
    form(action = "/signup" , method = "POST")
      div(class="mb-4")
        label(for="email" class="block text-gray-600 text-sm font-medium mb-2") Email
        input(type="text"  id="email" name="email" class="w-full px-3 py-2 leading-5 text-gray-700 border rounded-lg shadow-sm focus:outline-none focus:border-blue-300 focus:shadow-outline-blue" required)

      div(class="mb-6")
        label(for="password" class="block text-gray-600 text-sm font-medium mb-2") Password
        input(type="password" id="password" name="password" class="w-full px-3 py-2 leading-5 text-gray-700 border rounded-lg shadow-sm focus:outline-none focus:border-blue-300 focus:shadow-outline-blue" required)

      div(class="flex justify-center")
        button(type="submit" class="px-4 py-2 text-white bg-blue-500 border rounded-lg shadow-sm hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue") Register
